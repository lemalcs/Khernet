<local:BasePage xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:Khernet.UI.Pages"
                xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                x:Class="Khernet.UI.Pages.UpdateProgressPage"
                mc:Ignorable="d" 
                d:DesignHeight="300" d:DesignWidth="300"
                x:Name="Login"
                Title="UpdateProgressPage">
    
    <StackPanel VerticalAlignment="Center">

        <!--Animation to show update progress-->
        <Controls:ProgressRing Width="20" 
                               Foreground="{StaticResource BlueBrush}"/>
        
        <!-- Progress description -->
        <TextBlock Text="Updating application"
                   HorizontalAlignment="Center"
                   Style="{StaticResource TextblockItemStyle}"/>
    </StackPanel>
</local:BasePage>
