<local:BasePage x:TypeArguments="vm:SignUpViewModel"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:Khernet.UI.Pages"
                xmlns:vm="clr-namespace:Khernet.UI"
                xmlns:depend="clr-namespace:Khernet.UI.DependencyProperties"
                x:Class="Khernet.UI.Pages.SignUpPage"
                xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                mc:Ignorable="d" 
                d:DesignHeight="300" d:DesignWidth="300"
                Style="{DynamicResource MetroPage}"
                x:Name="Login"
                Title="SignUpPage">
    <StackPanel 
            Orientation="Vertical" 
            Grid.Row="1" 
            Grid.Column="1"
            Width="300"
            Height="256"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            >

        <TextBlock Text="Create an account" Style="{StaticResource TitleText}"/>

        <TextBlock 
                Text="Username" 
                Width="220"
                Style="{StaticResource TextblockStyle}"
                />

        <!--Username textbox-->
        <TextBox 
                Height="28" 
                Width="220" 
                Text="{Binding Username,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True,NotifyOnValidationError=True}"
                Style="{StaticResource TextStyle2}"
                depend:IsFocusedProperty.Value="True"
                Template="{DynamicResource TextBoxControlTemplate1}"
                VerticalContentAlignment="Center"
                />

        <TextBlock 
                Text="Password" 
                Width="220"
                Style="{StaticResource TextblockStyle}"
                />

        <!--Password 1 textbox-->
        <PasswordBox 
                Name="pass1"
                Height="28" 
                Width="220" 
                Style="{StaticResource PasswordStyle}"
                Template="{DynamicResource PasswordBoxControlTemplate1}"/>


        <TextBlock 
                Text="Confirm password" 
                Width="220"
                Style="{StaticResource TextblockStyle}"
                />

        <!--Password 2 textbox-->
        <PasswordBox 
                Name="pass2"
                Height="28" 
                Width="220" 
                Style="{StaticResource PasswordStyle}"
                Template="{DynamicResource PasswordBoxControlTemplate1}"/>

        <!--Creation account/Login button-->
        <Button x:Name="button" 
                    Content="Create" 
                    Width="139"
                    IsDefault="True"
                    IsEnabled="{Binding CanLogin}"
                    depend:IsBusyProperty.Value="{Binding IsAttemptingLogin}"
                    Command="{Binding SignUpCommand}"
                    CommandParameter="{Binding ElementName=Login}"
                    Style="{StaticResource ButtonStyle1}"
            />
    </StackPanel>
</local:BasePage>
